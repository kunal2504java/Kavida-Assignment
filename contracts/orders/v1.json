{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Order",
  "description": "Schema for order data validation",
  "type": "object",
  "required": ["order_id", "customer_id", "order_total", "items_count", "order_date"],
  "properties": {
    "order_id": {
      "type": "string",
      "pattern": "^ORD-[0-9]{8}$",
      "description": "Unique order identifier in format ORD-XXXXXXXX"
    },
    "customer_id": {
      "type": "string",
      "pattern": "^CUST-[0-9]{6}$",
      "description": "Reference to customer ID"
    },
    "order_total": {
      "type": "number",
      "minimum": 0,
      "description": "Total order amount in USD"
    },
    "items_count": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of items in the order"
    },
    "order_date": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when order was placed"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "processing", "shipped", "delivered", "cancelled", "refunded"],
      "description": "Current order status"
    },
    "shipping_address": {
      "type": "object",
      "required": ["street", "city", "country"],
      "properties": {
        "street": {
          "type": "string",
          "minLength": 5
        },
        "city": {
          "type": "string",
          "minLength": 2
        },
        "state": {
          "type": "string"
        },
        "zip_code": {
          "type": "string"
        },
        "country": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        }
      }
    },
    "payment_method": {
      "type": "string",
      "enum": ["credit_card", "debit_card", "paypal", "bank_transfer", "cash_on_delivery"]
    },
    "discount_applied": {
      "type": "number",
      "minimum": 0,
      "description": "Discount amount applied to the order"
    },
    "tax_amount": {
      "type": "number",
      "minimum": 0,
      "description": "Tax amount for the order"
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$",
      "default": "USD",
      "description": "Three-letter currency code"
    }
  },
  "additionalProperties": false
}
