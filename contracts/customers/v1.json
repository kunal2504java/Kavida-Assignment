{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Customer",
  "description": "Schema for customer data validation",
  "type": "object",
  "required": ["id", "name", "email", "age", "signup_date"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^CUST-[0-9]{6}$",
      "description": "Unique customer identifier in format CUST-XXXXXX"
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "description": "Customer full name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Customer email address"
    },
    "age": {
      "type": "integer",
      "minimum": 0,
      "maximum": 150,
      "description": "Customer age in years"
    },
    "signup_date": {
      "type": "string",
      "format": "date",
      "description": "Date when customer signed up (YYYY-MM-DD)"
    },
    "phone": {
      "type": "string",
      "pattern": "^\\+?[1-9]\\d{1,14}$",
      "description": "Optional phone number in E.164 format"
    },
    "address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "zip_code": {
          "type": "string",
          "pattern": "^[0-9]{5}(-[0-9]{4})?$"
        },
        "country": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "suspended"],
      "description": "Customer account status"
    },
    "loyalty_tier": {
      "type": "string",
      "enum": ["bronze", "silver", "gold", "platinum"],
      "description": "Customer loyalty program tier"
    }
  },
  "additionalProperties": false
}
